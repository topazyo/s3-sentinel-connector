# Example environment variables for local development
# Copy this file to .env and update values before running locally

# AWS
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
S3_BUCKET_NAME=your-s3-bucket-name

# Azure
KEY_VAULT_URL=https://your-keyvault.vault.azure.net
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret

# Sentinel / Log Analytics
SENTINEL_WORKSPACE_ID=your-workspace-id
SENTINEL_DCR_ENDPOINT=https://your-dcr-endpoint

# Runtime / App
ENV=development
LOG_LEVEL=INFO
POLLING_INTERVAL_MINUTES=5
BATCH_SIZE=100

# Optional: local testing overrides
LOCAL_S3_ENDPOINT=http://localhost:4566
